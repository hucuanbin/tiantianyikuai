    <script>
        $(function () {

            zhuangtai_gengcai();

            //确认地址弹窗   点击确认
            $("#dizhi_queren").click(function () {
                $('#myModal2').modal('hide');
                $(".huoj_xx_top").attr("data-guoc", "2");
                $(".hj_xiaoshi").hide();
                $(".huoj_xx_dz").show();
                $(".zj_zhuangt_xx").hide();
                zhuangtai_gengcai();
            })

            //添加地址弹窗   点击确认
            $("#xiugai_dizhi").click(function () {
                var re = /^1\d{10}$/
                var yh_name = $("#yh_name").val();
                var yh_shouji = $("#yh_shouji").val();
                var yh_dizhi = $("#addrp").val() + $("#xiqngx_dz").text();
                if (re.test(yh_shouji)) {
                    $('#myModal1').modal('hide');
                    $(".yh_name").text(yh_name);
                    $(".yh_shouji").text(yh_shouji);
                    $(".yh_dizhi").text(yh_dizhi);
                }
                else {
                    alert("请输入正确的手机号码");
                }

            })

            // 根据data-guoc的值 判断奖牌状态步骤
            function zhuangtai_gengcai() {
                var a = parseInt($(".huoj_xx_top").attr("data-guoc"));
              
                if (a >= 2) {
                    a++;
                }
                if (a == 3) {
                    $(".huoj_xx_top_2 > div:eq(" + a + ") div").prepend("<span class='right  '>派发中...</span>");
                }
                $(".huoj_xx_top_2 > div:eq(" + a + ")").addClass("huojiang_guo_zi");
                $(".huoj_xx_top_2 > div:eq(" + a + ")").prevAll().addClass("huojiang_guo_zi_qian");
                for (var i = 0; i <= a; i++) {
                    var caozuo = $(".huoj_xx_top_2>div:eq(" + i + ") b");
                    caozuo.attr("class", "b"+(i+1) + "1");
                }

            }


            //一下吃复制小辉的添加地址的省市区
            function change_data(input_id, topid) {
                var obj = $("#" + input_id);
                obj.empty();
                obj.append("<option value='-1'>请选择</option>");
                if (topid >= 0) {
                    $.ajax({
                        url: '/Address/CityGet',
                        data: { top: topid }
                    }).done(function (data) {
                        for (var i = 0; i <= data.length; i++) {
                            //if (!set_default && obj.attr("id") == "sheng" && data[i].id == sheng_id) {
                            //    obj.append("<option value='" + data[i].id + "' selected='selected'>" + data[i].CName + "</option>");
                            //    set_default = true;
                            //}
                            //else {
                            obj.append("<option value='" + data[i].id + "'>" + data[i].CName + "</option>");
                            //}
                        }

                        obj.trigger('change');
                    });
                }
            }

            $("#sheng").change(function () {
                var v = $(this).val();
                change_data("city", v);
            });

            $("#city").change(function () {
                var v = $(this).val();
                change_data("xian", v);
            });
            $("#xian").change(function () {
                set_city();
            })

            change_data("sheng", 0);

            function set_city() {
                var s = $("#sheng").val();
                var c = $("#city").val();
                var x = $("#xian").val();
                var v = s + "," + c + "," + x;
                $("#addrp").val(v);
            }

        })
    </script>
